<h1>Signup</h1>
<%= form_for @user do |f| %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <p>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this article from being saved:
    </p>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= f.check_box :admin %><%= f.label :admin, "Check box if you are the Admin" %>
<table>
    <tr><th><%= f.label :name %></th> <td><%= f.text_field :name %></td></tr>
    <tr><th><%= f.label :password %></th> <td><%= f.password_field :password%></td></tr>
    <tr><th><%= f.label :password_confirmation %></th> <td><%= f.password_field :password_confirmation%></td></tr>
    <tr><td></td><td><%= f.submit "Sign Up" %></td></tr>
</table>
<% end %>