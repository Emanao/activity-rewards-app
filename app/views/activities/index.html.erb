<h1>Add Goals</h1>
<table>
    <tr><th>Points</th><th>Goals</th>
    <%@activities.each do |activity|%>
        <tr>
        <td><%= "#{activity.points}" %></td>
        <td><%= "#{activity.name}" %></td>
        <td><%= button_to "Add Goal", user_achievements_path(@user), params: {"achievement[user_id]" => @user.id, "achievement[activity_id]" => activity.id} %></td> 
        </tr>
    <%end%>
</table>
<%= link_to 'Back', user_path(current_user) %>
